{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2022"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["./src", "../server/dto/", "../common/"]
}
